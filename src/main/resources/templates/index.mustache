{{>layout/header}}
    <style>
        .num {
            width:7%;
            text-align:center;
        }
        .title{
            width:30%;
            text-align:center;
        }
        .author{
            width:10%;
            text-align:center;
        }
        .uptime{
            width:15%;
            text-align:center;
        }
        .col-md-6{
            align-item  s:right;
        }
    </style>
    <div>
        <h2> 게시판1 <a href="/posts/save?num=1" role="button" class="btn btn-primary" style=float:center>글 등록</a>  </h2>
    <div>
    <div class="col-md-12">
        <!-- 목록 출력 영역 -->
        <table class="table table-horizontal table-bordered">
            <thead class="thead-strong">
            <tr>
                <th class = "num">게시글번호</th>
                <th class = "title">제목</th>
                <th class = "author">작성자</th>
                <th class = "uptime">최종수정일</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#posts}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{modifiedDate}}</td>
                </tr>
            {{/posts}}
            </tbody>
        </table>
    </div>
{{>layout/footer}}